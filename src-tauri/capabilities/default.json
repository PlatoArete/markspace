{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-set-size",
    "core:window:allow-set-position",
    "core:window:allow-maximize",
    "opener:default",
    "core:path:default",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-remove",
    {
      "identifier": "fs:scope",
      "allow": [
        "**"
      ]
    },
    "dialog:default"
  ]
}